= render './header'
.panel
  %h1 User
  - if flash.present?
    = render './flash_msg'
  %table
    %thead
      %tr
        %th
          name
        %th
          email
    %tbody
      %tr
        %td
          = @user.name
        %td
          = @user.email
        %td
          =link_to 'Back ', root_path
          &nbsp;&nbsp;
          = "|"
        %td
          =link_to 'Edit', edit_user_path(@user)
          &nbsp;&nbsp;
          = "|"
        %td
          =link_to 'Delete', user_path(@user), method: :delete
          &nbsp;&nbsp;
          = "|"
        %td
          =link_to 'Create Record', new_user_record_path(@user)